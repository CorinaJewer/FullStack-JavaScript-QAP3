<html lang="en">
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/header.ejs') %>   
    
    <body>
        <div class="menu-items-edit">
            <div class = "logout">
                <h2>Menu Items List:</h2>
                <a href="/"><button id = "sign-out">Sign Out</button></a>
            </div>  
            <% menuItems.forEach(item => { %>
                <div class="menu-items-list">
                    <strong>Menu ID:</strong> <%= item.menu_id %> - <strong>Name:</strong> <%= item.name %> - <strong>Price: </strong>$<%= item.price %>
                    <div class = "links">
                        <a href = "menu-items/<%= item.menu_id %>/edit"><button id = "edit">Edit</button></a>
                        <span class = "space"></span>
                        <a href="menu-items/<%= item.menu_id %>/delete"><button id = "delete">Delete</button></a></br> 
                    </div>    
                </div>
            <% }); %>

            <hr>
          
            <div class = "new-item">   
                <form action="/menu-items" method="POST">
                    </br>
                    <label><h3>Add New Menu Item:</h3></label>
                    </br>
                    <label>Name:</label>
                        <input type="text" id="name" name="name" value="<%= locals.name %>" required>
                    
                    <label>Description:</label>
                        <input type="text" id="description" name="description" value="<%= locals.description %>" required>
                    
                    <label>Price:</label>
                        <input type="text" id="price" name="price" value="<%= locals.price %>" required>
                    
                    <label>Category:</label>
                        <input type="text" id="category" name="category" value="<%= locals.category %>" required>
                    
                    <label>Image URL:</label>
                        <input type="text" id="image_url" name="image_url" value="<%= locals.image_url %>" required>
                    </br>
                    <button id = "add">Add New Item</button>
                </form>
            </div>                            
        </div>         
    </body>
    <%- include('./partials/footer.ejs') %>
</html>